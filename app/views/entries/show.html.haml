- model_class = Entry
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:entry_type) + ':'
  %br
  = @entry.entry_type
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @entry.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @entry.email
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @entry.phone
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @entry.date
%p
  %strong= model_class.human_attribute_name(:from) + ':'
  %br
  = @entry.from
%p
  %strong= model_class.human_attribute_name(:to) + ':'
  %br
  = @entry.to
%p
  %strong= model_class.human_attribute_name(:seats) + ':'
  %br
  = @entry.seats
%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @entry.notes
%p
  %strong= model_class.human_attribute_name(:secret) + ':'
  %br
  = @entry.secret

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), entries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_entry_path(@entry), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), entry_path(@entry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
