= form_for @entry, :html => { :class => 'form-horizontal' } do |f|
  = f.hidden_field :entry_type
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field', :placeholder => 'Your name'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field', :placeholder => 'your@email-address.org'
  .control-group
    = f.label :phone, :class => 'control-label'
    .controls
      = f.text_field :phone, :class => 'text_field', :placeholder => 'Your phone number'
  .control-group
    = f.label :date, :class => 'control-label'
    .controls
      = f.text_field :date, :class => 'form-control', :data => { :date_format => 'YYYY/MM/DD' }
  .control-group
    = f.label :from, :class => 'control-label'
    .controls
      = f.text_field :from, :class => 'text_field', :placeholder => 'Your start point'
  .control-group
    = f.label :to, :class => 'control-label'
    .controls
      = f.text_field :to, :class => 'text_field', :placeholder => 'Your destination'
  .control-group
    = f.label :seats, :class => 'control-label'
    .controls
      = f.text_field :seats, :class => 'text_field'
  .control-group
    = f.label :notes, :class => 'control-label'
    .controls
      = f.text_area :notes, :class => 'text_field', :class => "input-xlarge"
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn'

:javascript
  $(function() {
    $('#entry_date').datetimepicker({
        dateFormat: "yy-mm-dd",
        timeFormat: "hh:mm"
    });
  })

